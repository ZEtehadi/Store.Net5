                        {
                            <td>ارسال شده</td>
                        }

                        <td>@item.OrderDate</td>
                        <td>@item.Amount.ToString("n0")</td>
                        <td>
                            <button class="btn btn-info" onclick="OrderDetial('@item.OrderId')" >جزئیات سفارش</button>
                        </td>
                    </tr>
                }

            </tbody>
