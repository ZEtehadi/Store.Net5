@using Clean_Architecture.Application.Services.Products.Queries.GetCategoriesForAdmin;
@model List<ResultCategoriesDto>

@{
    ViewData["Title"] = "دسته بندی ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-6 col-lg-3">
            <a href="~/admin/Products_sameCat/index?CatId=@item.Id" class="adplacement-item">
                <div class="adplacement-sponsored_box">
                    <img src="~/@item.ImageSrc" style="width:300px; height:300px;">
                    <p class="card-text">@item.Name</p>
                </div>
            </a>
        </div>
    }
</div>
